{
  "name": "salary-tracker-system",
  "version": "1.0.0",
  "description": "A MERN stack application for tracking employee salaries and advance payments",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "test": "jest",
    "test:watch": "jest --watch",
    "build": "cd client && npm run build"
  },
  "keywords": ["salary", "tracker", "mern", "mongodb", "express", "react", "nodejs"],
  "author": "Salary Tracker Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "helmet": "^7.0.0",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "jest": "^29.6.2",
    "fast-check": "^3.12.0",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0",
    "@testing-library/jest-dom": "^6.1.2"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "server/**/*.js",
      "client/src/**/*.js",
      "!**/node_modules/**"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  }
}